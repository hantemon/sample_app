<%= form_for(current_user.relationships.build(followed_id: @user.id),
             remote: true) do |f| %>
  <div><%= f.hidden_field :followed_id %></div>
  <div class="btn-group btn-group-3 input-group" data-toggle="buttons">
    <%= f.submit "Follow", class: "btn btn-primary" %>
  </div>
<% end %>